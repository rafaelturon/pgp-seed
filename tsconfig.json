{
    "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es2020",
      "outDir": "./dist",
      "lib": ["es2020"],
      "resolveJsonModule": true,
      "types": ["node", "jest"],
      "typeRoots" : ["./node_modules/@types", "./src/@types"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true
    },
    "include": [
      "src/*.ts",
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.spec.ts",
      "src/**/*.spec.js"
    ]
  }